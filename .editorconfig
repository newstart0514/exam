root = true  # 表示当前配置在项目的根里面

[*] #对于所有文件都适用
charset = utf-8
indent_style = space #缩进风格
indent_size = 2 #缩进空格数
end_of_line = lf #控制换行类型，即行的末尾以什么为结束
insert_final_newline = true #是否在文件末尾加一行空行
trim_trailing_whitespace = true #去除行首的任意空白字符

[*.md] #表示md文件适用以下规则
max_line_length = off
trim_trailing_whitespace = false